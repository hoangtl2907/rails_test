.main-content
  .container-fluid
    .header
      .header-body
        .row.align-items-end
          .col
            .header-pretitle
              h6 = t('.heading_sub')
            h1.header-title = AdminUser.model_name.human
          .col-auto
            = link_to t('.csv'), dashboard_admin_users_path(admin_user: @search_query, format: :csv), class: 'btn btn-info lift ml-3'

    .row.mt-4
      .col-12
        .navbar.navbar-light.bg-light.justify-content-between
          = link_to t('.new'), new_dashboard_admin_user_path, class: 'btn btn-primary'
          .form-inline
            = form_with(url: dashboard_admin_users_path, method: :get) do |f|
              = f.text_field :q, class: 'form-control mr-sm-2'
              = f.submit 'Search', class: 'btn btn-outline-primary my-2 my-sm-0'
        .card
          .table-responsive
            table.table.table-sm.card-table
              thead
                tr
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:id)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('id')
                        = link_to '⋀', dashboard_admin_users_path(order_params('id', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('id', 'asc'))
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:email)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('email')
                        = link_to '⋀', dashboard_admin_users_path(order_params('email', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('email', 'asc'))
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:name)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('name')
                        = link_to '⋀', dashboard_admin_users_path(order_params('name', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('name', 'asc'))
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:age)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('age')
                        = link_to '⋀', dashboard_admin_users_path(order_params('age', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('age', 'asc'))
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:created_at)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('created_at')
                        = link_to '⋀', dashboard_admin_users_path(order_params('created_at', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('created_at', 'asc'))
                  th
                    .d-flex
                      .mr-2 = AdminUser.human_attribute_name(:updated_at)
                      - if params[:d].present? && params[:d].include?('asc') && params[:o].include?('updated_at')
                        = link_to '⋀', dashboard_admin_users_path(order_params('updated_at', 'desc'))
                      - else
                        = link_to '⋁', dashboard_admin_users_path(order_params('updated_at', 'asc'))
                  th
              tbody
                - @admin_users.each do |admin_user|
                  tr
                    td = admin_user.id
                    td = admin_user.email
                    td = admin_user.name
                    td = admin_user.age
                    td = admin_user.created_at
                    td = admin_user.updated_at
                    td
                      .btn-group.mr-2
                        = link_to t('.show'), dashboard_admin_user_path(admin_user), class: 'btn btn-primary btn-sm'
                      .btn-group.mr-2
                        = link_to t('.edit'), edit_dashboard_admin_user_path(admin_user), class: 'btn btn-primary btn-sm'
                      .btn-group.mr-2
                        = button_to 'Delete', dashboard_admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'

        = paginate @admin_users, views_prefix: 'dashboard'
